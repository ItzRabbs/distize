{
  "name": "easy-dist",
  "version": "1.0.4",
  "description": "Copy source files and node_modules without devDependencies to destination directory.",
  "keywords": [
    "build",
    "node_modules",
    "distribute",
    "distribution",
    "awscdk",
    "cdk",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/ItzRabbs/easy-dist.git"
  },
  "bin": {
    "easy-dist": "bin/cli.js"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rimraf ./lib && tsc --project tsconfig.build.json && swc src --no-swcrc --config-file .swcrc.build.json --out-dir lib",
    "postbuild": "cp package.json lib && cp README.md lib",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --ext .js,.ts --ignore-path .gitignore --fix src",
    "test:unit": "jest src --runInBand"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "glob": "^7.1.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.55",
    "@swc/core": "1.2.159",
    "@swc/jest": "^0.2.20",
    "@types/command-line-args": "5.2.0",
    "@types/command-line-usage": "5.0.2",
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.16.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-stable": "0.10.0",
    "jest": "^27.5.1",
    "prettier": "2.6.0",
    "rimraf": "3.0.2",
    "typescript": "4.6.2"
  }
}